<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:weightSum="1"
        android:background="@drawable/about"
        android:orientation="vertical">

        <!--    Roll Number Label -->
        <ImageView
            android:layout_width="235dp"
            android:layout_height="140dp"
            android:id="@+id/imageView4"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo"
            android:layout_weight="0.27" />

        <EditText android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"

            android:layout_marginTop="30dp"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textColorHint="#000000" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/view"></android.support.design.widget.TextInputLayout>

        <!--  Password Label -->

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"></android.support.design.widget.TextInputLayout>


        <EditText android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Roll Number"
            android:textColor="#000000"
            android:capitalize="characters"
            android:allowUndo="false"
            android:shadowColor="#000000"
             android:layout_below="@+id/input_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColorHint="#000000" />

        <EditText android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="New Password"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/input_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textColorHint="#000000" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:padding="12dp"
            android:text="Register"
            android:background="#619bfb"
            android:layout_below="@+id/input_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:orientation="vertical" />

        <Button
            android:id="@+id/link_login"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Already A Member? Login "
            android:gravity="center"
            android:background="@null"
            android:textSize="15dip"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/btn_signup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:shadowColor="#000000"
            android:capitalize="characters"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView><!-- From: file:/C:/Users/sai/AndroidStudioProjects/AndroidLoginAndRegistration%20v2/AndroidLoginAndRegistration/app/src/main/res/layout/activity_register.xml -->