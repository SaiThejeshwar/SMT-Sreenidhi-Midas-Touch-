<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    >

    <LinearLayout
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:weightSum="1"
        android:background="@drawable/about">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView1"
            android:layout_width="334dp"
            android:layout_height="73dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id1">
        </com.google.android.gms.ads.AdView>

        <ImageView android:src="@drawable/ic_logo"
            android:layout_width="711dp"
            android:layout_height="122dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView3"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.11" />

        <!--    Roll Number Label -->

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/view"></android.support.design.widget.TextInputLayout>

        <!--  Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"></android.support.design.widget.TextInputLayout>

        <EditText android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Roll Number"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:capitalize="characters"
            android:allowUndo="false"
            android:shadowColor="#000000"
            android:textSize="20sp"
            android:layout_weight="0.14"
            android:textColorHint="#000000" />

        <EditText android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="SMT Password"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/input_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="0.13"
            android:textColorHint="#000000" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:padding="12dp"
            android:text="Login"
            android:background="#619bfb"
            android:layout_below="@+id/input_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="No Account Yet? Register"
            android:gravity="center"
            android:background="@null"
            android:textSize="15dip"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/btn_signup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:shadowColor="#000000"
            android:capitalize="characters"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>